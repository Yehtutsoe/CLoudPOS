@model IList<SaleViewModel>
<h1>Sale View Information</h1>
<div class="mb-3">
    <a href="/sale/entry" class="btn btn-primary"><i class="fa fa-plus"></i> Create</a>
</div>
<table class="table table-hover" id="saleTable">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Sale Date</th>
            <th>Total Amount</th>
            <th>Total Cost</th>
            <th>Profit</th>
            <th>Action</th>
        </tr>
    </thead>
    @{
        int i = 1;
    }
    <tbody>
        @foreach(var sale in Model){
        <tr>
            <td>@i</td>
            <td>@sale.SaleDate.ToString("dd-MM-yyyy")</td>
            <td>@sale.TotalAmount</td>
            <td>@sale.TotalCost</td>
            <td>@sale.Profit</td>
            <td>
                    <a href="/sale/edit?id=@sale.Id" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a>
                    <a href="javascript:void(0)" data-url="/sale/delete?id=@sale.Id" data-name="Sale" class="btn btn-danger delete-button"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
        i++;
        }
    </tbody>
</table>
