@model PurchaseViewModel
<h2>Purchase Entry Form</h2>
<form action="/purchase/update" method="post">
    <div class="col-6">
        <div class="mb-3">
            <label for="SupplierId" class="form-label">Model</label>
            <select name="SupplierId" id="SupplierId" class="form-select">
                <option value="x">[Select One]</option>
                @foreach (var suppliers in Model.SupplierViewModels)
                {
                    if(suppliers.Id == Model.SupplierId)
                    {
                        <option value="@suppliers.Id" selected>@suppliers.Name</option>
                    }
                    else
                    {
                        <option value="@suppliers.Id">@suppliers.Name</option>
                    }
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="PurchaseDate" class="form-label">Purchase Date</label>
            <input type="date" value="@Model.PurchaseDate.ToString("dd-MM-yyyy")" name="PurchaseDate" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="TotalCost" class="form-label">Total Cost</label>
            <input type="number" value="@Model.TotalCost" name="TotalCost" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="DeliverStatus" class="form-label">Deliver Status</label>
            <input type="text" value="@Model.DeliveryStatus" name="DeliveryStatus" class="form-control"/>
        </div>
    </div>

    <button type="submit" class="btn btn-success"> <i class="bi bi-floppy-fill"></i>Update</button>
    <a href="/purchase/list" class="btn btn-warning"><i class="bi bi-x-square-fill"></i>Cancel</a>
</form>