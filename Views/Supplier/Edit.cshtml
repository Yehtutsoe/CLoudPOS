@model SupplierViewModel
@{
    if (TempData["ErrorViewModel"] != null)
    {
        var error = Newtonsoft.Json.JsonConvert.DeserializeObject<ErrorViewModel>((string)TempData["ErrorViewModel"]);
        <div class="alert @(error.IsOccurError ? "alert-danger" : "alert-success")">
            @error.Message
        </div>
    }
}
<h2 class="mb-3">Supplier Update Form</h2>
<form action="/supplier/update" method="post">
    <input type="text" value="@Model.Id" name="Id" hidden />
    <div class="mb-3 col-6">
        <label for="Name" class="form-label">Name</label>
        <input type="text" value="@Model.Name" name="Name" class="form-control"/>
    </div>

    <div class="mb-3 col-6">
        <label for="ContactInformation" class="form-label">Contact Information</label>
        <input type="text" value="@Model.ContactInformation" name="ContactInformation" class="form-control"/>
    </div>
    <div class="mb-3 col-6">
        <label for="Address" class="form-label">Address</label>
        <input type="text" value="@Model.Address" name="Address" class="form-control" placeholder="Enter Address" required />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/supplier/list" class="btn btn-warning">Cancel</a>

</form>

